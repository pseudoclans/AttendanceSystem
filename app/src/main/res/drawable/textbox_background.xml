<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/rounded_edit_text_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="@android:color/transparent" /> <!-- Background color -->
    <corners android:radius="50dp" /> <!-- Border radius -->
    <padding
        android:left="25dp"
        android:top="16dp"
        android:right="25dp"
        android:bottom="20dp" /> <!-- Padding inside the EditText -->
    <stroke
        android:width="3dp"
        android:color="@color/blue" /> <!-- Border color -->
</shape>
